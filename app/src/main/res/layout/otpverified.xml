<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:layout_width="321dp"
        android:layout_height="436dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonwhite"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/success"
                tools:ignore="ContentDescription"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Step 2 Completed"
                android:textColor="@color/Blacklogo"
                android:textSize="25dp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage"></TextView>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/otpsuc"
                tools:ignore="ContentDescription"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="Success"
                android:textColor="@color/Blacklogo"
                android:textSize="15dp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage">


            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_light"
                android:text="Your Number is Verified."
                android:textColor="@color/Blacklogo"
                android:textSize="15dp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage"></TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lesgotp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/button"
                android:text="Continue"
                android:textColor="#FF9800"
                android:textSize="15sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>